# DATA MODEL USED

CREATE TABLE sales (
  sale_id INT,
  customer_name VARCHAR(50),
  region VARCHAR(50),
  amount DECIMAL(10,2),
  sale_date DATE
);

-- Sample Data
INSERT INTO sales VALUES
