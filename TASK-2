# SQL ANALYSIS: Queries with Insights
#  1. Window Function – Running Total per Region

SELECT
  sale_id,
  customer_name,
  region,
  amount,
  sale_date,
  SUM(amount) OVER (PARTITION BY region ORDER BY sale_date) AS running_total_region
FROM sales;

# 2. Subquery – Top Sale per Customer

SELECT customer_name, amount, sale_date
FROM sales
WHERE (customer_name, amount) IN (
  SELECT customer_name, MAX(amount)
  FROM sales
  GROUP BY customer_name
);

# 3. CTE – Monthly Regional Sales Trend

WITH monthly_sales AS (
  SELECT
    region,
    DATE_TRUNC('month', sale_date) AS sale_month,
    SUM(amount) AS total_sales
  FROM sales
  GROUP BY region, sale_month
)
SELECT *
FROM monthly_sales
ORDER BY sale_month, region;




